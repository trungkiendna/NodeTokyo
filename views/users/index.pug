extends ../layout/common
block content
  .container-fluid.my-5
      .row
        .col-8.offset-2
          .card
            .card-header.bg-primary.text-white.text-uppercase Users
            .card-body
              form.seach-form(action="/users/search")
                .container
                  h2 Searching
                  .row
                    .col-12
                      .form-group
                        label(for='name') Name
                        input#name.form-control(name="q", type='search')
                    .col-12
                      button.btn.btn-primary(type='submit') Search

              .users.my-3 
                h2.text-center.text-info.my-3 All users
                if users.length > 0
                  table.table.table-bordered
                    thead
                      tr.bg-info.text-white
                        th  Name
                        th  Phone
                        th  Username 
                        th  Action 
                    tbody
                      each user in users
                        tr
                          td=  user.name 
                          td=  user.phone
                          td=  user.username 
                          td
                            a.btn.btn-info(href="/users/" + user.id) View
                else
                  p.text-center No user to display

              a.btn.btn-primary(href="/users/create") Create new user